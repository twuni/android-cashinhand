<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#FFd9fcb6">

    <TextView
    	android:text="(unknown)"
    	android:id="@+id/treasury"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textColor="#FF003300"
    	android:paddingLeft="5sp"
    	android:paddingTop="2sp"/>

    <TextView
    	android:text="$0.00"
    	android:id="@+id/balance"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/treasury"
    	android:textColor="#FF009900"
    	android:textSize="20dp"
    	android:paddingLeft="5sp"/>
    	
    <TextView
    	android:text="@string/make_payment"
    	android:layout_alignParentRight="true"
    	android:layout_alignParentBottom="true"
    	android:paddingRight="5sp"
    	android:paddingBottom="2sp"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>

</RelativeLayout>
