<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="fill_parent" android:padding="10dip" android:orientation="vertical">

	<ProgressBar android:id="@+id/loading" android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginBottom="5dip"/>
	<Spinner android:id="@+id/treasury" android:prompt="@string/treasury_selection" android:layout_height="wrap_content" android:layout_width="fill_parent" android:visibility="gone"/>
	<TextView android:text="$0.00" android:id="@+id/balance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:textSize="40dip" android:visibility="gone"/>

	<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingBottom="5dip" android:paddingTop="5dip">
		<Button android:text="@string/pay" android:onClick="launchPayment" android:id="@+id/payButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
		<EditText android:text="" android:id="@+id/paymentAmount" android:inputType="numberDecimal" android:layout_height="wrap_content" android:layout_width="100dip" android:layout_toLeftOf="@id/payButton" android:layout_centerVertical="true"/>
		<TextView android:text="$" android:id="@+id/paymentAmount$" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@id/paymentAmount" android:textSize="40dip" android:layout_centerVertical="true"/>
		<Button android:layout_height="wrap_content" android:text="@string/deposit" android:layout_width="wrap_content" android:onClick="launchDeposit" android:id="@+id/depositButton" android:layout_centerVertical="true"/>
	</RelativeLayout>

	<TextView android:id="@+id/empty" android:text="@string/empty_wallet" android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingBottom="5dip" android:textStyle="bold" android:visibility="gone"/>
	<TextView android:id="@+id/deposit_instructions" android:text="@string/deposit_instructions" android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingBottom="5dip"/>
	<TextView android:id="@+id/withdraw_instructions" android:text="@string/withdraw_instructions" android:layout_width="fill_parent" android:layout_height="wrap_content"/>

</LinearLayout>
