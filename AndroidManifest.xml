<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="org.twuni.money.wallet" android:versionCode="100000001" android:versionName="1.0.1">
	<application android:icon="@drawable/icon" android:label="@string/wallet">
		<activity android:name=".activity.MainActivity" android:label="@string/wallet">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name=".activity.nfc.NFCReaderActivity" android:label="@string/wallet">
			<intent-filter>
				<action android:name="android.nfc.action.NDEF_DISCOVERED"/>
				<data android:mimeType="application/json+money"/>
			</intent-filter>
		</activity>
	</application>
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.NFC"/>
	<uses-sdk android:minSdkVersion="10"/>
	<uses-feature android:name="android.hardware.nfc"/>
</manifest>
